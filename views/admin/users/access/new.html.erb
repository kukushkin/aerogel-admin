<% page_title t.aerogel.admin.views.users_access.create.title %>

<% form @access, action: "/admin/users/access/new" do %>
<%=  field :path %>
<%=  field :access, as: :radio_buttons, values: %w(R RW), labels: ['Read', 'Read & Write'] %>
<%=  field :role, as: :select, from: Role, values: :slug, labels: :name %>
<%=  button :cancel, url: '/admin/users/access/' %>
<%=  button :create %>
<% end %>