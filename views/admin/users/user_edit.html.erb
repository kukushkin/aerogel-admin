<% page_title "Edit user profile" %>

<% form @user, action: "/admin/users/#{@user.id}/edit",
    html_params: {'data-async' => nil, 'data-target' => '#modal-content'} do %>
<%=     field :full_name %>
<%      fieldset :emails do %>
<%=         field :email, readonly: true %>
<%      end %>
<%=     field :roles, readonly: true %>
<%=     button "Save changes" %>
<% end %>