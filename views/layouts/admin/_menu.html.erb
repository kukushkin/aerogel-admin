<div id="top-menu" class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/admin/"><%= icon 'fa-dashboard' %></a>
    </div>

    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <%= partial 'layouts/admin/menu_item', collection: admin_menu_items %>
      </ul>


      <!-- current user menu -->
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="/user" class="dropdown-toggle" data-toggle="dropdown">
            <%= icon('fa-user')+" #{h current_user.full_name}" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu" style="width:100%">
            <li><%= link_to_if_can "/user", t.aerogel.admin.actions.view_current_user.to_s %></li>
            <li class="divider"></li>
            <li><%= link_to '/user/logout', t.aerogel.admin.actions.logout.to_s if current_user? %></li>
          </ul>
        </li>

        <li class="dropdown">
          <a href="<%= current_url locale: current_locale %>" class="dropdown-toggle" data-toggle="dropdown"><%= current_locale %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% I18n.available_locales.each do |locale| %>
              <li <%= locale == current_locale ? 'class="active"' : ''%> >
                <%= link_to current_url( locale: locale ), locale.to_s %>
              </li>
            <% end %>
          </ul>
        </li>

      </ul>

    </div><!--/.nav-collapse -->


  </div>
</div>
